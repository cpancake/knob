<h2>New Image</h2>
{{#if error}}
<div class='alert alert-danger alert-dismissable'>
	<strong>Error:</strong> {{error}}
</div>
{{/if}}
<form class='form-horizontal' method='post' enctype='multipart/form-data'>
	<div class='form-group'>
		<label for='file-input' class='col-lg-1 control-label'>File</label>
		<div class='col-lg-3'>
			<input type='file' name='image' id='file-input' title='Select flash file'>
		</div>
	</div>
	<div class='form-group'>
		<label for='file-input' class='col-lg-1 control-label'>Tags</label>
		<div class='col-lg-3'>
			<input type='text' name='tags' value=''>
		</div>
	</div>
	<div class='form-group'>
		<div class='col-lg-offset-1 col-lg-3'>
			<input type='hidden' name='handler' value='{{handler}}'>
			<input type='submit' class='btn btn-primary' value='Go'>
		</div>
	</div>
</form>