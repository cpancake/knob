<h2>New Post</h2>
<form class='form-horizontal' method='post'>
	<div class='form-group'>
		<label for='handler-input' class='col-lg-1 control-label'>Post Type</label>
		<div class='col-lg-3'>
			<select class='form-control' id='handler-input' name='handler'>
				{{#each handlers}}
				{{#with this}}
					<option value='{{id}}'>{{name}}</option>
				{{/with}}
				{{/each}}
			</select>
		</div>
	</div>
	<div class='form-group'>
		<div class='col-lg-offset-1 col-lg-3'>
			<input type='submit' class='btn btn-primary' value='Go'>
		</div>
	</div>
</form>